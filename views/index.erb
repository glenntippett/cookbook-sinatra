<% @recipes.each_with_index do |element, index| %>
<div class="card border border-secondary" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= element.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= element.prep_time %></h6>
    <p class="card-text"><%= element.description %></p>
    <a href="#" class="card-link">View Recipe</a>
    <form action="/delete/<%= index %>" method="POST" id="recipe_id">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
    </form>
  </div>
</div>
<% end %>


<a href="/new">Add a new recipe</a>



 