<div class="row mt-2">
  <div class="col">
    <h1>New Recipe</h1>
  </div>
</div>

<div class="row">
  <div class="col mt-2">
    <form action="/recipes" method="POST">
      <!-- Recipe Name -->
      <div class="row">
        <div class="col-lg-6">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Recipe Name</span>
            </div>
            <label for="recipe_name"></label>
            <input id="recipe_name" name="recipe_name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="row">
        <div class="col-lg-8">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Description</span>
            </div>
            <label for="description"></label>
            <textarea id="description" name="description" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"></textarea>
          </div>
        </div>
      </div>

      <!-- Prep Time -->
      <div class="row">
        <div class="col-lg-3">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Prep Time</span>
            </div>
            <label for="prep_time"></label>
            <input id="prep_time" name="prep_time" id="description" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
          </div>
        </div>
      </div>

      <!-- Ingredients -->
      <div class="row">
        <div class="col-lg-10">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Ingredient</span>
            </div>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="ingredient-input">
          </div>
        </div>

        <!-- Measurement -->
        <div class="col-xs-2 col-lg-2">
          <div class="input-group mb-3">
            <select class="custom-select" id="inputGroupSelect01">
              <option selected>Choose...</option>
              <option value="1">ml</option>
              <option value="2">L</option>
              <option value="3">Cup</option>
              <option value="4">tsp</option>
              <option value="4">tblspn</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Add Ingredient to list -->
        <div class="row mb-2">
          <div class="col">
            <button type="button" class="btn btn-outline-secondary btn-sm" id="add-ingredient-btn">Add ingredient</button>
          </div>
        </div>

        <div class="row mt-2">
          <div class="col">
            <h3>Ingredients</h3>
          </div>
        </div>

        <ul class="list-group list-group-flush" id="ingredient-list-ul">
          <!-- li items populated here -->
        </ul>

      <!-- Save Recipe -->
      <div class="row">
        <div class="col">
          <button type="submit" class="btn btn-success mt-3">Save Recipe</button>
        </div>
      </div>
    </form>
  </div>
</div>

